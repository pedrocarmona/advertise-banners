<p id="notice"><%= notice %></p>

<h1>Listing Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Nbr. banners</th>
      <th>Nbr. profitable</th>
      <th>Nbr. clicked</th>
      <th>Nbr. not banners clicked</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.id %></td>
        <td><%= campaign.banners.size %></td>
        <td><%= campaign.most_profitable_banners_ids.size %></td>
        <td><%= campaign.most_clicked_banners_ids.size %></td>
        <td><%= campaign.non_clicked_banners.size %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

